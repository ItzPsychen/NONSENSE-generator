<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unipd.edids.FormController">

    <!-- Top bar -->
    <top>
        <AnchorPane prefHeight="92.0" prefWidth="930.0" BorderPane.alignment="CENTER">
            <children>
                <MenuBar prefHeight="27.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <MenuItem mnemonicParsing="false" text="Close" />
                            <MenuItem mnemonicParsing="false" onAction="#openSettings" text="Settings" />
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <Label alignment="CENTER" layoutX="34.0" layoutY="38.0" prefHeight="27.0" text="NONSENSE Generator" AnchorPane.leftAnchor="34.0" AnchorPane.rightAnchor="34.0" AnchorPane.topAnchor="38.0">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </top>

    <!-- Bottom bar -->
    <bottom>
        <AnchorPane prefHeight="36.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER">
            <children>
                <ProgressBar fx:id="progressBar" layoutY="8.0" maxWidth="400.0" minWidth="400.0" prefHeight="8.0" prefWidth="300.0" progress="0.0" stylesheets="@style/progress.css" AnchorPane.leftAnchor="265.0" AnchorPane.rightAnchor="265.0" AnchorPane.topAnchor="14.0" />
            </children>
        </AnchorPane>
    </bottom>

    <center>
        <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>

                <!-- Left Pane -->
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <Button fx:id="analyzeButton" layoutX="16.0" layoutY="105.0" mnemonicParsing="false" onAction="#analyzeClick" prefHeight="28.0" prefWidth="133.0" style="-fx-background-color: #007BFFFF;" text="Analyze" textFill="WHITE" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="105.0">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                        <TextField fx:id="inputText" layoutX="16.0" layoutY="58.0" prefHeight="31.0" prefWidth="419.0" promptText="Write a sentence" text="This sentence is a good example" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="58.0" />
                        <Label layoutX="14.0" layoutY="25.0" prefHeight="20.0" prefWidth="421.0" text="Write your sentence to generate something" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="25.0">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <ScrollPane layoutX="14.0" layoutY="13.0" prefHeight="337.0" prefWidth="430.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="156.0">
                            <content>
                                <TextFlow fx:id="syntaxArea" prefHeight="335.0" prefWidth="428.0" />
                            </content>
                        </ScrollPane>
                        <CheckBox fx:id="checkSyntax" layoutX="167.0" layoutY="113.0" mnemonicParsing="false" text="Syntactic Tree" AnchorPane.leftAnchor="167.0" AnchorPane.topAnchor="113.0" />
                        <CheckBox fx:id="checkSaveSentence" layoutX="275.0" layoutY="113.0" mnemonicParsing="false" text="Save" AnchorPane.leftAnchor="285.0" AnchorPane.topAnchor="113.0" />
                    </children>
                </AnchorPane>

                <!-- Right Pane -->
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <Button fx:id="generateButton" layoutX="17.0" layoutY="50.0" mnemonicParsing="false" onAction="#generateClick" prefHeight="28.0" prefWidth="133.0" style="-fx-background-color: #007BFFFF;" text="Generate" textFill="WHITE" AnchorPane.leftAnchor="17.0" AnchorPane.topAnchor="50.0">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>

                        <!-- Progress Bars -->
                        <ProgressBar fx:id="toxicityBar" prefWidth="300.0" progress="0.0" AnchorPane.bottomAnchor="130.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="130.0" />
                        <ProgressBar fx:id="profanityBar" prefWidth="300.0" progress="0.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="130.0" />
                        <ProgressBar fx:id="insultBar" prefWidth="300.0" progress="0.0" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="130.0" />
                        <ProgressBar fx:id="sexualBar" prefWidth="300.0" progress="0.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="130.0" />
                        <ProgressBar fx:id="politicsBar" prefWidth="300.0" progress="0.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="130.0" />

                        <Label layoutX="517.0" layoutY="421.0" style="-fx-font-weight: bold;" text="Toxicity" AnchorPane.bottomAnchor="131.0" AnchorPane.rightAnchor="28.0" />
                        <Label layoutX="507.0" layoutY="451.0" style="-fx-font-weight: bold;" text="Profanity" AnchorPane.bottomAnchor="101.0" AnchorPane.rightAnchor="28.0" />
                        <Label layoutX="529.0" layoutY="481.0" style="-fx-font-weight: bold;" text="Insult" AnchorPane.bottomAnchor="71.0" AnchorPane.rightAnchor="28.0" />
                        <Label layoutX="526.0" layoutY="511.0" style="-fx-font-weight: bold;" text="Sexual" AnchorPane.bottomAnchor="41.0" AnchorPane.rightAnchor="27.0" />
                        <Label layoutX="525.0" layoutY="541.0" style="-fx-font-weight: bold;" text="Politics" AnchorPane.bottomAnchor="11.0" AnchorPane.rightAnchor="24.0" />

                        <ScrollPane layoutX="5.0" layoutY="150.0" minHeight="181.0" prefHeight="181.0" prefWidth="432.0" AnchorPane.bottomAnchor="173.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="24.0" AnchorPane.topAnchor="150.0">
                            <content>
                                <TextFlow fx:id="generateArea" minHeight="230.0" prefWidth="425.0" AnchorPane.bottomAnchor="190.0" />
                            </content>
                        </ScrollPane>

                        <CheckBox fx:id="toxicityLevels" layoutX="14.0" layoutY="331.0" mnemonicParsing="false" onAction="#toxicityPressed" selected="true" style="-fx-font-weight: Bold;" text="Toxicity Levels:" AnchorPane.bottomAnchor="155.0" AnchorPane.leftAnchor="14.0" />
                        <CheckBox layoutX="394.0" layoutY="58.0" mnemonicParsing="false" text="Future Tense" />
                        <CheckBox layoutX="394.0" layoutY="28.0" mnemonicParsing="false" text="All words new" />

                        <Label layoutX="159.0" layoutY="4.0" text="Sentence structure" />

                        <!-- Radio buttons + ComboBox -->
                        <RadioButton fx:id="randomStructureRadio" layoutX="163.0" layoutY="28.0" mnemonicParsing="false" onAction="#radioPressed" selected="true" text="Random" userData="RANDOM" />
                        <RadioButton fx:id="sameAsAnalyzeRadio" layoutX="163.0" layoutY="57.0" mnemonicParsing="false" onAction="#radioPressed" text="Same as analyze" userData="SAME" />
                        <RadioButton fx:id="selectStructureRadio" layoutX="163.0" layoutY="87.0" mnemonicParsing="false" onAction="#radioPressed" text="Select" userData="SELECTED" />
                        <ComboBox fx:id="structureComboBox" layoutX="242.0" layoutY="84.0" prefWidth="120.0" />
                  <Label layoutX="394.0" layoutY="6.0" text="Word Generation" />

                    </children>
                </AnchorPane>

            </items>
        </SplitPane>
    </center>

</BorderPane>
